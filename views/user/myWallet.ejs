<%- include('../partials/userHeader') %>
<head>
    <style>
        body {
            overflow-y: hidden; /* Disable vertical scrollbar */
        }

        .container {
            min-height: 400px;
            padding: 20px; /* Add some padding for better spacing */
        }

        .card {
            border: none; /* Remove card border */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background-color: #e9d9da; /* Change header background color */
        }

        .card-title {
            color: #2bb843; /* Change card title color */
        }
    </style>
</head>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-white">
                    <h5 class="card-title">My Wallet</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Current Balance</h6>
                    <h4 class="card-title"><i class="fa-solid fa-indian-rupee-sign"></i><%= balance.toFixed(2) %></h4>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
