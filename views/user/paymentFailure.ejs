<%- include('../partials/userHeader') %>
<head>
  <style>
    body {
      overflow-y: hidden;
    }
    
  </style>
</head>

<div class="container-fluid bg-light" style="min-height: 76vh">
  <div class="row justify-content-center align-items-center py-5">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <!-- Card Header with red background -->
        <div class="card-header bg-danger text-white py-4">
          <div class="d-flex justify-content-center">
            <i class="bi bi-x-circle-fill display-4"></i>
          </div>
        </div>

        <!-- Card Body -->
        <div class="card-body p-3 p-md-4 text-center">
          <h1 class="h2 fw-bold text-danger mb-3">Payment Unsuccessful</h1>
          <p class="lead mb-4">
            We couldn't process your payment. Please check your payment details
            and try again.
          </p>

          <div class="alert alert-warning text-start mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Possible reasons:</strong>
            <ul class="mt-2 mb-0">
              <li>Insufficient funds in your account</li>
              <li>Incorrect card details entered</li>
              <li>Bank declined the transaction</li>
            </ul>
          </div>

          <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-4">
            <a href="/viewOrders" class="btn btn-danger btn-lg px-4 py-2">
              <i class="bi bi-cart-check me-2"></i> View Orders
            </a>
            <a href="/home" class="btn btn-outline-secondary btn-lg px-4 py-2">
              <i class="bi bi-arrow-left me-2"></i> Return to home
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
