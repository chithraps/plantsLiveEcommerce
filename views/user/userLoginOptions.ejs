<%- include('../partials/header') %>
<head>
  <style>
    .bg-pink {
      background-color: #ffc0cb !important;
    }
    
  </style>
</head>

<div
  class="container-fluid min-vh-100 d-flex align-items-center justify-content-center py-5"
>
  <div class="row w-100 justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Card Header with Responsive Padding -->
        <div
          class="card-header bg-pink text-white text-center py-3 py-sm-4"
        >
          <h2 class="h3 mb-1 fw-bold">Welcome Back</h2>
          <p class="small mb-0 opacity-75">Choose a login method</p>
        </div>

       
        <div class="card-body p-3 p-sm-4">
         
          <div class="d-grid mb-3 mb-sm-4">
            <a
              href="/auth/google"
              class="btn btn-lg btn-outline-danger border-2 fw-semibold d-flex align-items-center justify-content-center gap-2 py-2"
            >
              <i class="bi bi-google fs-4"></i>
              <span>Login with Google</span>
            </a>
          </div>

          <!-- Responsive Divider -->
          <div class="d-flex align-items-center my-3">
            <hr class="flex-grow-1" />
            <span class="px-2 px-sm-3 text-muted small">or</span>
            <hr class="flex-grow-1" />
          </div>

          <!-- Email Login Button - Responsive Sizing -->
          <div class="d-grid mb-3 mb-sm-4">
            <a
              href="/login"
              class="btn btn-lg btn-primary fw-semibold d-flex align-items-center justify-content-center gap-2 py-2"
            >
              <i class="bi bi-envelope-fill fs-4"></i>
              <span>Login with Email</span>
            </a>
          </div>

          <!-- Forgot Password Link - Responsive Text -->
        </div>

        <!-- Optional Card Footer for Additional Links -->
        <div class="card-footer bg-transparent text-center py-3">
          <p class="small mb-0 text-muted">
            Don't have an account?
            <a href="/register" class="text-primary text-decoration-none"
              >Sign up</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Icons CDN -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>

<%- include('../partials/footer') %>
